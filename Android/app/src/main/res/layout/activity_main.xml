<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/back10">


    <TextView android:id="@+id/ampm"
        android:layout_width="35dp"
        android:gravity="fill"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F0000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textScaleX="1.0"/>

    <TextView
        android:id="@+id/watch"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/ampm"
        android:layout_alignBaseline="@id/ampm"
        android:gravity="fill"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F0000000"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textScaleX="1.3"
        />

    <TextView android:id="@+id/day"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F0000000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textScaleX="1.2"
        android:gravity="center"
        />




    <TextView
        android:id="@+id/battery"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/gridView1"
        android:layout_alignBaseline="@+id/gridView1"
        android:text=""
        android:textColor="#F0000000"
        android:textSize="15dp"
        android:gravity="fill"
        android:background="@drawable/battery"/>

    <GridView
        android:layout_marginTop="10dp"
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="0dp"
        android:gravity="center"
        android:layout_below="@id/watch"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="50dp">
    </GridView>


</RelativeLayout>